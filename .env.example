# ==================================
# CONFIGURATION BACKEND - GXpro Sign
# ==================================

# ==================================
# SERVEUR
# ==================================
PORT=5000
NODE_ENV=development

# ==================================
# BASE DE DONNÉES MONGODB
# ==================================
# Local
MONGODB_URI=mongodb://localhost:27017/gxprosign

# OU MongoDB Atlas (Production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gxprosign?retryWrites=true&w=majority

# ==================================
# JWT (JSON Web Tokens)
# ==================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# ==================================
# EMAIL (SMTP)
# ==================================
# Gmail Example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Nom d'affichage
EMAIL_FROM_NAME=GXpro Sign
EMAIL_FROM_ADDRESS=noreply@gxprosign.com

# ==================================
# DIGITAL OCEAN SPACES (ou AWS S3)
# ==================================
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=gxprosign-documents
DO_SPACES_REGION=nyc3

# ==================================
# FRONTEND URL
# ==================================
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PRODUCTION=https://gxprosign.com

# ==================================
# FICHIERS ET UPLOADS
# ==================================
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024 = 10485760 bytes

ALLOWED_FILE_TYPES=application/pdf
UPLOAD_DIR=./uploads

# ==================================
# TOKENS ET SÉCURITÉ
# ==================================
TOKEN_EXPIRATION_DAYS=30
ACCESS_CODE_LENGTH=6
PASSWORD_RESET_EXPIRE=3600000
# 1 heure = 3600000 ms

# ==================================
# RATE LIMITING
# ==================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 900000 ms
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# PAGINATION
# ==================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==================================
# CERTIFICATS DE SIGNATURE
# ==================================
SIGNATURE_CERTIFICATE_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# ==================================
# RAPPELS AUTOMATIQUES
# ==================================
AUTO_REMINDER_ENABLED=true
REMINDER_INTERVALS_DAYS=3,7,14
# Rappels à 3, 7 et 14 jours

# ==================================
# MULTI-TENANT
# ==================================
BASE_DOMAIN=gxprosign.com
ALLOW_CUSTOM_DOMAINS=false

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ==================================
# FEATURES FLAGS
# ==================================
ENABLE_TWO_FACTOR=true
ENABLE_SIGNATURE_UPLOAD=true
ENABLE_MOBILE_SIGNING=true
ENABLE_API_DOCS=true

# ==================================
# SUPPORT
# ==================================
SUPPORT_EMAIL=support@gxprosign.com
ADMIN_EMAIL=admin@gxprosign.com
